<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="workflow" class="modula.workflow.engine.DefaultWorkflowEngine">
        <property name="registry" ref="registry"/>
        <!-- 设置一些全局变量 (所有流程共享)-->
        <property name="globals">
            <map>
                <entry key="testKey" value="test" />
            </map>
        </property>
    </bean>

    <bean id="registry" class="modula.workflow.register.DefaultStateMachineRegistry">
    </bean>

    <bean id="modula" class="modula.workflow.executor.factory.WorkflowSpringFactoryBean">
        <property name="path" value="modula/workflow.xml"/>
        <property name="action">
            <map>
                <entry key="calc">
                    <value type="java.lang.Class">com.alibaba.shared.xfsm.example.helloworld.CalcAction</value>
                </entry>
            </map>
        </property>
        <property name="listener">
            <bean class="com.alibaba.shared.xfsm.core.listener.SimpleXFSMListener"/>
        </property>
    </bean>

</beans>
